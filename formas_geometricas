#include <stdio.h>

int main() {
    int a, b, c, d, e;
    
    printf("Digite um valor inteiro para a variavel a: ");
    scanf("%d", &a);

    printf("Digite um valor inteiro para a variavel b: ");
    scanf("%d", &b);

    printf("Digite um valor inteiro para a variavel c: ");
    scanf("%d", &c);

    printf("Digite um valor inteiro para a variavel d: ");
    scanf("%d", &d);

    printf("Digite um valor inteiro para a variavel e (raio): ");
    scanf("%d", &e);

    int area = (b * c) / 2;
    printf("Area do triangulo: %d\n", area);

   int perimetro = a + b + c + d;
    printf("Perimetro do retangulo: %d\n", perimetro);

    int circulo = PI * e * e;
    printf("Area do circulo: %d\n", Circulo);

    return 0;
}

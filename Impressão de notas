#include <stdio.h>

int main() {
    int a, b, c, d, e;
    float areaTriangulo, areaCirculo;
    int perimetroRetangulo;
    const float PI = 3.14;

    printf("Digite um valor inteiro para a variavel a: ");
    scanf("%d", &a);

    printf("Digite um valor inteiro para a variavel b: ");
    scanf("%d", &b);

    printf("Digite um valor inteiro para a variavel c: ");
    scanf("%d", &c);

    printf("Digite um valor inteiro para a variavel d: ");
    scanf("%d", &d);

    printf("Digite um valor inteiro para a variavel e (raio): ");
    scanf("%d", &e);

    areaTriangulo = (b * c) / 2.0;
    printf("Area do triangulo: %.2f\n", areaTriangulo);

    perimetroRetangulo = a + b + c + d;
    printf("Perimetro do retangulo: %d\n", perimetroRetangulo);

    areaCirculo = PI * e * e;
    printf("Area do circulo: %.2f\n", areaCirculo);

    return 0;
}
